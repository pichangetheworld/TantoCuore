<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pichangetheworld.tantacuore.MainActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="generateRandom"
        android:text="@string/generate" />
    
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="19dp"
        android:columnCount="1"
        android:rowCount="10" >

        <TextView
            android:id="@+id/cell1"
            style="@style/TextStyle"
            android:text="@string/output" />

        <TextView
            android:id="@+id/cell2"
            style="@style/TextStyle"
            android:text="@string/output" />

        <TextView
            android:id="@+id/cell3"
            style="@style/TextStyle"
            android:text="@string/output" />

        <TextView
            android:id="@+id/cell4"
            style="@style/TextStyle"
            android:text="@string/output" />

        <TextView
            android:id="@+id/cell5"
            style="@style/TextStyle"
            android:text="@string/output" />

        <TextView
            android:id="@+id/cell6"
            style="@style/TextStyle"
            android:text="@string/output" />

        <TextView
            android:id="@+id/cell7"
            style="@style/TextStyle"
            android:text="@string/output" />

        <TextView
            android:id="@+id/cell8"
            style="@style/TextStyle"
            android:text="@string/output" />

        <TextView
            android:id="@+id/cell9"
            style="@style/TextStyle"
            android:text="@string/output" />

        <TextView
            android:id="@+id/cell10"
            style="@style/TextStyle"
            android:text="@string/output" />
    </GridLayout>
    
    <TextView
        android:id="@+id/chiefs"
        style="@style/TextStyle"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_below="@+id/gridLayout"
        android:text="@string/chiefs_title" />
    
    <TextView
        android:id="@+id/chief1"
        style="@style/TextStyle"
        android:layout_alignLeft="@+id/chiefs"
        android:layout_below="@+id/chiefs"
        android:text="@string/chiefs" />

    <TextView
        android:id="@+id/chief2"
        style="@style/TextStyle"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_below="@+id/chief1"
        android:text="@string/chiefs" />

</RelativeLayout>